@model WebApplication1.Models.Employee

@{
    Layout = "_Layout";
    ViewData["Title"] = "Xóa Nhân viên";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Admin/EmployeeList">Quản lý Nhân viên</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Bạn có chắc chắn muốn xóa nhân viên này không?
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Họ và tên:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Giới tính:</strong> @Model.Gender</p>
            <p><strong>Điện thoại:</strong> @Model.Phone</p>
            <p><strong>Lương:</strong> @Model.Salary.ToString("N0") VNĐ</p>
            <p><strong>Trạng thái:</strong> @Model.Status</p>

            <form asp-action="DeleteEmployee" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="/Admin/EmployeeList" class="btn btn-secondary">Hủy bỏ</a>
            </form>
        </div>
    </div>
</div>